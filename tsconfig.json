{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments":true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  
    "resolveJsonModule":true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@controllers/*":["./src/controllers/*"],
      "@models/*":["./src/models/*"],"@views/*":["./src/views/*"],
      "@config/*":["./src/config/*"]
    }
  },
  "include": [
    "src/**/*"
  ]
}